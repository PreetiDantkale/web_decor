<div class="jumbotron text-center p-3">
  <h1 class="display-4">WEB Decor</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4 border border-dark rounded p-4">
      <h2>Forgot password?</h2>
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
      <%= f.submit "Reset Password", class:"btn btn-info btn-block" %>
      </div>
      <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
